{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
  }
}